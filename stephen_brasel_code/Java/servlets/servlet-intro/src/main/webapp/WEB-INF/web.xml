<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Servlet Intro</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!--    name of servlet, where it is located in the project-->
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.revature.servlets.TestServlet</servlet-class>
    </servlet>

    <!--    where the servlet should be mapped to-->
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <!--    name of servlet, where it is located in the project-->
    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>com.revature.servlets.CalculatorServlet</servlet-class>
    </servlet>

    <!--    where the servlet should be mapped to-->
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calculator</url-pattern>
    </servlet-mapping>

</web-app>